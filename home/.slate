# General Configuratoin
config windowHintsShowIcons true
config windowHintsFontColor 255;0;0;1.0
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config windowHintsSpreadSearchWidth 200
config windowHintsSpreadSearchHeight 200
config windowHintsSpreadPadding 200
config undoOps move,resize
config orderScreensLeftToRight true

alias hyper ctrl;shift;alt;cmd
alias showNormalHint hint AOEUIDHTNSYXFBPKGMCW
alias showHintsLeftHand hint AOEUIYQJKX

# General aliases
alias sox screenOriginX
alias soy screenOriginY
alias ssx screenSizeX
alias ssy screenSizeY

# Position aliases
alias centered ${sox}+${ssx}/8;${soy}+${ssy}/8 ${ssx}/8*6;${ssy}/8*6
alias fullscreen ${sox};${soy} ${ssx};${ssy}
alias leftHalf ${sox};${soy} ${ssx}/2;${ssy}
alias bottomHalf ${sox};${soy}+${ssy}/2 ${ssx};${ssy}/2
alias bottomQuarter ${sox};${soy}+${ssy}/4 ${ssx};${ssy}/4
alias topHalf ${sox};${soy} ${ssx};${ssy}/2
alias rightHalf ${sox}+${ssx}/2;${soy} ${ssx}/2;${ssy}
alias topLeftQuarter ${sox};${soy} ${ssx}/2;${ssy}/2
alias topRightQuarter ${sox}+${ssx}/2;${soy} ${ssx}/2;${ssy}/2
alias bottomLeftQuarter ${sox};${soy}+${ssy}/2 ${ssx}/2;${ssy}/2
alias bottomRightQuarter ${sox}+${ssx}/2;${soy}+${ssy}/2 ${ssx}/2;${ssy}/2

bind e:cmd;alt;ctrl;shift ${showHintsLeftHand}
bind backslash:${hyper} relaunch

bind right:${hyper} push right bar-resize:screenSizeX/2
bind left:${hyper}  push left  bar-resize:screenSizeX/2
#bind up:${hyper}    push up    bar-resize:screenSizeY/2
bind up:${hyper}    push up    bar-resize:screenSizeY/1.5
#bind down:${hyper}  push down  bar-resize:screenSizeY/2
bind down:${hyper}  push down  bar-resize:screenSizeY/3

bind g:${hyper} move ${centered}
bind o:${hyper} move ${fullscreen}
bind u:${hyper} corner top-left resize:screenSizeX/2;screenSizeY/2
bind i:${hyper} corner top-right resize:screenSizeX/2;screenSizeY/2
bind n:${hyper} corner bottom-left  resize:screenSizeX/2;screenSizeY/2
bind m:${hyper} corner bottom-right resize:screenSizeX/2;screenSizeY/2

bind ':${hyper} throw previous
bind ;:${hyper} throw next
bind 1:${hyper} throw 0
bind 2:${hyper} throw 1
bind 3:${hyper} throw 2

#bind 1:${hyper} grid

bind a:${hyper} focus 'Atom'
bind j:${hyper} focus 'IntelliJ IDEA'
bind s:${hyper} focus 'Safari'
bind t:${hyper} focus 'iTerm'
bind c:${hyper} focus 'Google Chrome'

bind =:${hyper} resize +0 +10%
bind -:${hyper} resize +0 -10%
bind [:${hyper} resize -10% 0
bind ]:${hyper} resize +10% 0
